{
  "plugins": [
    "security",
    "mocha",
    "node"
  ],
  "extends": [
    "plugin:security/recommended",
    "plugin:mocha/recommended",
    "plugin:node/recommended",
    "eslint:recommended"
  ],
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": "off",
    "require-jsdoc": "warn",
    "valid-jsdoc": ["warn", {
      "prefer": {
        "return": "returns"
      },
      "requireReturn": false
    }],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
